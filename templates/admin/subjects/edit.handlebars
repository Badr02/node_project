<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-3 sidenav" style="padding-top: 50px">
      <div class="row">
        <div class="col-sm-3">
          <img src="/userImage.png" class="img-circle" alt="Image" width="70" height="70" />
        </div>
        <div class="col-sm-6" style="padding-left: 20px;">
          <h4>{{admin.name}}</h4>
          <p style="font-size: 12px; margin-top: -10px">Admin</p>
          <a href="/admin/{{admin._id}}/edit" class="custom-btn" style="margin-right: 2px">Edit</a>
          <a href="/logout" class="custom-btn" style="margin-right: 2px">Log out</a>
        </div>
      </div>

      <ul class="nav nav-pills nav-stacked" style="padding-top: 40px">
        <li><a href="/admin/departments">Departments</a></li>
        <li class="active"><a href="/admin/subjects">Subjects</a></li>
        <li><a href="/admin/doctors">Doctors</a></li>
        <li><a href="/admin/students">Students</a></li>
      </ul>
    </div>

    <div class="col-sm-9" style="padding: 60px">

      <form action="/admin/subjects/{{subject._id}}?_method=PUT" method="post">
        <div>
          <label for="">Name:</label>
          <input type="text" class="form-control" name="name" autocomplete="off" value="{{subject.name}}" />
        </div>
        <div style="margin-top: 20px;">
          <label for="code">Code:</label>
          <input type="text" class="form-control" name="code" autocomplete="off" value="{{subject.code}}" />
        </div>
        <div style="margin-top: 20px;">
          <label for="">Department:
            <pre>{{subject.department.name}}</pre>
          </label>
          <select name="department" id="" class="form-control" style="margin-top: 5px;">
            {{#each departments}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div style="margin-top: 20px;">
          <label for="">Previous requirement:
            <pre>{{subject.previousReq.name}}</pre>
          </label>
          <select name="previousReq" id="" class="form-control" style="margin-top: 5px;">
            {{#each subjects}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div style="margin-top: 20px;">
          <label for="">Doctor:
            <pre>{{subject.doctor.name}}</pre>
          </label>
          <select name="doctor" id="" class="form-control" style="margin-top: 5px;">
            {{#each doctors}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="text-right" style="margin-top: 30px;">
          <button type="submit" class="btn btn-success" style="font-size: 15px;">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>