<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-3 sidenav" style="padding-top: 50px">
      <div class="row">
        <div class="col-sm-3">
          <img src="/userImage.png" class="img-circle" alt="Image" width="70" height="70" />
        </div>
        <div class="col-sm-6" style="padding-left: 20px; margin-top: -5px">
          <h4>Lana Del Rey</h4>
          <p style="font-size: 12px; margin-top: -10px">ID: 200579</p>
          <p style="font-size: 12px; margin-top: -10px">Admin</p>
          <button class="custom-btn" style="margin-right: 2px">Edit</button>
          <button class="custom-btn">Log out</button>
        </div>
      </div>

      <ul class="nav nav-pills nav-stacked" style="padding-top: 40px">
        <li><a href="/admin/departments">Departments</a></li>
        <li><a href="/admin/subjects">Subjects</a></li>
        <li class="active"><a href="/admin/doctors">Doctors</a></li>
        <li><a href="/admin/students">Students</a></li>
      </ul>
    </div>

    <div class="col-sm-9" style="padding: 60px">

      <form action="/admin/doctors/{{doctor._id}}?_method=PUT" method="post">
        <div>
          <label for="name">Name:</label>
          <input type="text" class="form-control" name="name" autocomplete="off" value="{{doctor.name}}" />
        </div>
        <div style="margin-top: 20px;">
          <label for="username">Username:</label>
          <input type="text" class="form-control" name="username" autocomplete="off" value="{{doctor.username}}" />
        </div>
        <div style="margin-top: 20px;">
          <label for="password">Password:</label>
          <input type="text" class="form-control" name="password" autocomplete="off" />
        </div>
        <div class="text-right" style="margin-top: 30px;">
          <button type="submit" class="btn btn-success" style="font-size: 15px;">Update</button>
        </div>
      </form>


      <div style="margin-top: 50px;">
        {{#each subjects}}
        <div class="card">
          <div class="card-body">
            <h4 class="text-center">{{code}}</h4>
            <p class="text-center">{{name}}</p>
            <div class="text-center">
              <a class="btn btn-danger trigger-btn" data-toggle="modal" style="padding: 3px;"
                href="#deleteConfirmation{{_id}}">Remove</a>
            </div>
          </div>
        </div>


        <div id="deleteConfirmation{{_id}}" class="modal fade">
          <div class="modal-dialog modal-confirm">
            <div class="modal-content">
              <div class="modal-header flex-column">
                <h4 class="modal-title w-100">Are you sure?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              </div>
              <div class="modal-body">
                <p>Do you really want to remove {{name}} from the doctor</p>
              </div>
              <div class="modal-footer justify-content-center">
                {{!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button> --}}
                <form action="/admin/subjects/{{_id}}?_method=PUT" method="post">
                  <input type="text" class="form-control" name="name" autocomplete="off" value="{{name}}" style="display:none"/>
                  <input type="text" class="form-control" name="code" autocomplete="off" value="{{code}}" style="display:none"/>
                  <input type="text" class="form-control" name="department" autocomplete="off"
                    value="{{department}}" style="display:none"/>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>


        {{/each}}

      </div>


    </div>
  </div>
</div>