<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-3 sidenav" style="padding-top: 50px">
      <div class="row">
        <div class="col-sm-3">
          <img src="/userImage.png" class="img-circle" alt="Image" width="70" height="70" />
        </div>
        <div class="col-sm-6" style="padding-left: 20px; margin-top: -5px">
          <h4>Lana Del Rey</h4>
          <p style="font-size: 12px; margin-top: -10px">ID: 200579</p>
          <p style="font-size: 12px; margin-top: -10px">Admin</p>
          <button class="custom-btn" style="margin-right: 2px">Edit</button>
          <button class="custom-btn">Log out</button>
        </div>
      </div>

      <ul class="nav nav-pills nav-stacked" style="padding-top: 40px">
        <li><a href="/admin/departments">Departments</a></li>
        <li><a href="/admin/subjects">Subjects</a></li>
        <li><a href="/admin/professors">Professors</a></li>
        <li class="active"><a href="/admin/students">Students</a></li>
      </ul>
    </div>

    <div class="col-sm-9" style="padding: 20px">
      <h2 class="text-center">Students</h2>
      <div class="text-right">
        <a
          href="/admin/students/create"
          class="btn btn-primary"
          style="font-size: 15px; margin-top: -45px;"
        >Add Students</a>
      </div>

      <table class="table table-hover" style="margin-top: 20px;">
        <thead>
          <tr>
            <th>Academic Number</th>
            <th>Name</th>
            <th>Username</th>
            <th>Password</th>
            <th></th>
          </tr>
        </thead>
        <tbody>

          {{#each students}}
            <tr>
              <td>{{academicNumber}}</td>
              <td>{{name}}</td>
              <td>{{username}}</td>
              <td>{{password}}</td>
              <td>
                <a
                  class="btn btn-primary"
                  href="/admin/departments/{{_id}}"
                >Edit</a>
                <a class="btn btn-danger" href="">Delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>