
<div style="background-color: #f0f4ff; width:100%; height:100%">
<div class="center">
<form action="/login" method="post">
  <div>
    <label for="">Username:</label>
    <input type="text" class="form-control" name="username" autocomplete="off">
  </div>
  <div style="margin-top: 20px;">
    <label for="">Password:</label>
    <input type="text" class="form-control" name="password" autocomplete="off">
  </div>
          <div style="margin-top: 20px;">
          <label for="">User type:</label>
          <select name="userType" id="" class="form-control">
              <option value="admin">Admin</option>
              <option value="doctor">Doctor</option>
              <option value="student">Student</option>
          </select>
        </div>
        <p class="text-center" style="color: red; margin-top:10px; font-weight:bold" >{{ message }}</p>
  <div class="text-center" style="margin-top: 30px;">
    <button type="submit" class="btn btn-success" style="font-size: 15px;">Login</button>
  </div>
</form>
</div>
</div>
